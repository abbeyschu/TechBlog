<section>
<form>
  <input type="hidden" name="post-id" value="{{post.id}}" />
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" id="newPost" value="{{post.title}}" >
  </div>
  <div class="form-group">
    <label>Post Content</label>
  <textarea name="post-body" class="form-input">{{post.body}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="edit-post">Update</button>
  <button type="submit" class="btn btn-primary" id="delete-button">Delete</button>
</form>
</section>
<script src="/js/editPost.js"></script>

